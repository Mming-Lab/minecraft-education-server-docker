# ================================================
# サーバー基本設定
# ================================================

SERVER_PUBLIC_IP=
# サーバーの公開IPアドレスまたはドメイン名（必須設定）
# 同じLAN内（クライアントとサーバーが同じマシンの場合も含む）: DockerホストのプライベートIPアドレス（例: 192.168.1.100）
# インターネット経由の場合: グローバルIPアドレスまたはドメイン名（例: 203.0.113.1, example.com）
# 注意: DockerコンテナとしてサーバーをホストしているマシンのIPアドレスを指定してください
# 使用可能な値: ポート番号を含まない有効なIPアドレスまたはドメイン名

SERVER_PORT=19132
# サーバーがリッスンするIPv4ポート番号
# 使用可能な値: 1～65535の整数

SERVER_PORTV6=19133
# サーバーがリッスンするIPv6ポート番号
# 使用可能な値: 1～65535の整数

# ================================================
# ゲーム設定
# ================================================

GAMEMODE=creative
# 新しいプレイヤーのゲームモードを設定
# 使用可能な値: "survival"（サバイバル）, "creative"（クリエイティブ）, "adventure"（アドベンチャー）

DIFFICULTY=easy
# ワールドの難易度を設定
# 使用可能な値: "peaceful"（ピースフル）, "easy"（イージー）, "normal"（ノーマル）, "hard"（ハード）

MAX_PLAYERS=40
# サーバーに同時接続できる最大プレイヤー数
# 使用可能な値: 任意の正の整数

ALLOW_CHEATS=false
# trueの場合、コマンドなどのチート機能が使用可能になります
# 注: これらは学術的な意味での「カンニング」ではなく、管理機能としての性質を持ちます
# 使用可能な値: "true"または"false"

ALLOW_LIST=false
# trueの場合、接続するすべてのプレイヤーは別途allowlist.jsonファイルに登録されている必要があります
# 使用可能な値: "true"または"false"

CHAT_RESTRICTION=None
# サーバーに参加する各プレイヤーに適用されるチャット制限レベル
# "None": デフォルト値で通常の自由なチャットを表します
# "Dropped": チャットメッセージは破棄され、クライアントに送信されません。プレイヤーには機能が無効であることが通知されます
# "Disabled": プレイヤーがオペレーターでない限り、チャットUIすら表示されません。プレイヤーには何も表示されません
# 使用可能な値: "None", "Dropped", "Disabled"

# ================================================
# ワールド設定
# ================================================

LEVEL_NAME=Education level
# ワールド（レベル）の名前
# 使用可能な値: セミコロンやファイル名に使用できない記号（/\n\r\t\f`?*\\<>|\":）を含まない任意の文字列

LEVEL_SEED=
# 初期生成時にワールドをランダム化するために使用
# ワールドが既に生成されている場合、シード値を変更しても何も起こりません
# 空白の場合、ランダムなシード値が使用されます
# 使用可能な値: 任意の文字列

VIEW_DISTANCE=32
# 最大表示距離（チャンク単位）
# 使用可能な値: 5以上の正の整数

TICK_DISTANCE=4
# プレイヤーから何チャンク離れた範囲までワールドがティック（更新）されるか
# 使用可能な値: 4～12の整数

# ================================================
# プレイヤー設定
# ================================================

PLAYER_IDLE_TIMEOUT=30
# プレイヤーがこの分数だけアイドル状態になるとキックされます
# 0に設定するとプレイヤーは無期限にアイドル状態でいられます
# 使用可能な値: 任意の非負整数

DEFAULT_PLAYER_PERMISSION_LEVEL=member
# 初回参加時の新規プレイヤーの権限レベル
# 使用可能な値: "visitor"（訪問者）, "member"（メンバー）, "operator"（オペレーター）

# ================================================
# サーバー最適化
# ================================================

MAX_THREADS=8
# サーバーが使用しようとする最大スレッド数
# 0に設定するか削除すると、可能な限り多くのスレッドを使用します
# 使用可能な値: 任意の正の整数

TEXTUREPACK_REQUIRED=true
# クライアントに現在のワールドでテクスチャパックの使用を強制します
# 使用可能な値: "true"または"false"

CONTENT_LOG_FILE_ENABLED=false
# コンテンツエラーをファイルにログ記録することを有効にします
# 使用可能な値: "true"または"false"
